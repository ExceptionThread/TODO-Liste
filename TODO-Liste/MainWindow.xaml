<Window x:Class="TODO_Liste.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TODO_Liste"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FFD7D2D2">
        <DockPanel LastChildFill="True">
            <Border Width="200" BorderBrush="Black" BorderThickness="1" DockPanel.Dock="Left">
                <DockPanel LastChildFill="False">
                    <TextBlock Foreground="Black" DockPanel.Dock="Top">Top Content</TextBlock>
                    <Border BorderBrush="Black"  Height="50" BorderThickness="1" DockPanel.Dock="Bottom">
                        <TextBlock>Bottom Content</TextBlock>
                    </Border>
                </DockPanel>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1">
                <TextBlock Foreground="Black">Right</TextBlock>
            </Border>
        </DockPanel>
    </Grid>
</Window>
